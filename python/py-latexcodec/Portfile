if {${name} ne ${subport}} {
    depends_lib-append \
                    port:py${python.version}-six

    test.run        yes

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} AUTHORS.rst CHANGELOG.rst \
            INSTALL.rst LICENSE.rst README.rst ${destroot}${docdir}
    }
